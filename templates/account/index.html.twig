{% extends 'layouts/base.html.twig' %}

{% block title 'profile' %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto text-center">
            <h1 class="my-5">Profile</h1>
            <img src="https://steamcdn-a.akamaihd.net/steamcommunity/public/images/avatars/3b/3bbff963bcf8d44aa76738b87b63a2ee50286fb3_full.jpg"
                 class="rounded-circle shadow"
                 alt="photo profile">
            <p class="lead">{{ app.user.email }}</p>
            <p class="h2">{{ app.user.fullName }}</p>

            <a href="{{ path('app_account_edit') }}">Edit Account</a> |
            <a href="{{ path('app_account_change_password') }}">Change Password</a>
        </div>
    </div>

{% endblock %}