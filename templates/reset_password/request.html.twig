{% extends 'layouts/base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
   <div class="row">
       <h1 class="mt-5 mb-3 text-center">Reset your password</h1>

       <div class="col-md-6 mx-auto">
           {% for flashError in app.flashes('reset_password_error') %}
               <div class="alert alert-danger mb-3 rounded" role="alert">{{ flashError }}</div>
           {% endfor %}

           <div>
               <p class="mb-5 text-center text-muted">
                   Enter your email address and we we will send you a
                   link to reset your password.
               </p>
           </div>

           {{ form_start(requestForm) }}
           {{ form_row(requestForm.email) }}

           <div class="d-grid gap-2">
               <button type="submit" class="btn btn-primary btn-lg">Send password reset email</button>
           </div>

           {{ form_end(requestForm) }}
       </div>
   </div>
{% endblock %}
